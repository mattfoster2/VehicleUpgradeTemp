@model Component

@{
   ViewData["Title"] = "Update Service";
}

<div class="text-left">
   <h1 class="display-4">Update Service</h1>
</div>
<form method="post">
   <input type="hidden" asp-for="VehicleId" />
   <div asp-validation-summary="All"></div>
   <table align="left">
      <tr>
         <td align="right"> Category: </td>
         <td>
            <select asp-for="ComponentCategory">
               <option value="Engine"> Engine </option>
               <option value="Transmission"> Transmission </option>
               <option value="Drivetrain"> Drivetrain </option>
               <option value="Steering"> Steering </option>
               <option value="Front Suspension"> Front Suspension </option>
               <option value="Rear Suspension"> Rear Suspension </option>
               <option value="Fuel & Air"> Fuel & Air </option>
               <option value="HVAC"> HVAC </option>
               <option value="Exhaust & Emissions"> Exhaust & Emissions </option>
               <option value="Brakes"> Brakes </option>
               <option value="Electrical & Ignition"> Electrical & Ignition </option>
            </select>
         </td>
      </tr>
      <tr>
         <td align="right"> Component Name: </td>
         <td><input asp-for="ComponentName" type="text" /></td>
      </tr>
      <tr>
         <td align="right"> Component Condition: </td>
         <td>
            <select asp-for="ComponentCondition">
               <option value="Good"> Good </option>
               <option value="Okay"> Needs Serviced </option>
               <option value="Replace Immediately"> Replace Immediately </option>
            </select>
         </td>
      </tr>
      <tr>
         <td align="right"> Replaced Mileage: </td>
         <td><input asp-for="ReplacedMileage" type="number" /></td>
      </tr>
      <tr>
         <td align="right"> Purchase Date: </td>
         <td><input asp-for="PurchaseDate" type="date" /></td>
      </tr>
      <tr>
         <td align="right"> Component Cost: </td>
         <td><input asp-for="ComponentCost" type="text" /></td>
      </tr>
      <tr>
         <td align="right"> Component Manufacturer: </td>
         <td><input asp-for="ComponentManufacturer" type="text" /></td>
      </tr>
      <tr>
         <td align="right"> Purchase Vendor: </td>
         <td><input asp-for="PurchaseVendor" type="text" /></td>
      </tr>
      <tr>
         <td align="right"> Labor Cost: </td>
         <td><input asp-for="LaborCost" type="text" /></td>
      </tr>
      <tr>
         <td align="right"> Warranty Expiration: </td>
         <td><input asp-for="WarrantyExpiration" type="date" /></td>
      </tr>
      <tr>
         <td align="right"> OE Type Replacement or Modification: </td>
         <td>
            <select asp-for="AftermarketOrOem">
               <option value="OE Replacement"> OE Replacement </option>
               <option value="Modification"> Modification </option>
            </select>
         </td>
      </tr>
      <tr>
         <td colspan="2" align="center"><input type="submit" value="Update Service Record" /></td>
      </tr>
   </table>
</form>