@model User

<h3> Register for a new account </h3>

<div class="container">
   <form method="post">
      <ul>
         <Label> First Name: </Label>
         <input asp-for="FirstName" type="text" title="First Name" required />
      </ul>
      <ul>
         <label> Last Name: </label>
         <input asp-for="LastName" type="text" title="Last Name" required />
      </ul>
      <ul>
         <label> Email Address: </label>
         <input asp-for="EmailAddress" placeholder="example@example.com" title="Email Address" required />
      </ul>
      <ul>
         <label> Password: </label>
         <input asp-for="Password" title="Password" required />
      </ul>
      <br />
      <ul>
         <button type="submit"> Register </button>
      </ul>
   </form>
</div>